activate ABD
deactivate ABD

CTRL -> ABD : withRegex(regex)
activate ABD
deactivate ABD

CTRL -> ABD : withScript(scriptPath)
activate ABD
deactivate ABD

CTRL -> ABD : withDataType(dataType)
activate ABD
deactivate ABD

CTRL -> ABD : build()
activate ABD

ABD -> A** : create(name, label, description, regex, scriptPath, dataType)
activate A

