deactivate FBD

CTRL -> FR : save(form)
activate FR
FR --> CTRL : form
deactivate FR

CTRL --> UI : form
deactivate CTRL

UI -> HSM : asks if there is more forms to add to the current draft
deactivate UI

HSM -> UI : responds
activate UI
end

UI -> CTRL : addFormToDraft()
activate CTRL

CTRL -> S : setFormList(formList)
activate S

S --> CTRL : serviceDraft
deactivate S

